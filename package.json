{
  "name": "pledge",
  "version": "0.1.0",
  "description": "pledge is a slack bot that helps your team keep commitments",
  "main": "lib/index.js",
  "engineStrict": true,
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel src --out-dir lib && cp config.json lib || true",
    "watch": "npm run clean && cp config.json lib && babel src --out-dir lib --watch",
    "start": "DEBUG=pledge,http,express:* node lib/index.js",
    "restart": "DEBUG=pledge,http,express:* nodemon --config nodemon.json lib/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildo/pledge.git"
  },
  "author": "buildo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildo/pledge/issues"
  },
  "homepage": "https://github.com/buildo/pledge#readme",
  "dependencies": {
    "@slack/client": "^3.8.1",
    "babel-core": "^6.4.5",
    "babel-polyfill": "^6.4.5",
    "babel-runtime": "^6.9.2",
    "body-parser": "^1.15.0",
    "date.js": "^0.3.1",
    "debug": "^2.2.0",
    "del": "^2.2.2",
    "express": "^4.13.4",
    "lodash": "^4.11.1",
    "mockdate": "^2.0.1",
    "request": "^2.75.0",
    "request-promise": "^2.0.1",
    "simple-oauth2": "^1.0.3",
    "sqlite": "^2.0.2",
    "supertest": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^18.0.0",
    "babel-plugin-lodash": "2.2.1",
    "babel-plugin-syntax-async-functions": "^6.8.0",
    "babel-plugin-transform-regenerator": "^6.9.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^2.4.0",
    "eslint-config-buildo": "github:buildo/eslint-config-buildo",
    "jest": "^18.1.0",
    "nodemon": "^1.11.0"
  }
}
